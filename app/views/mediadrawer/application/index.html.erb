<div id="mediadrawer" class="modal fade">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title">Mediadrawer</h4>
      </div>
      <div class="modal-body">
        <%= render 'containers' %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-add-folder>Nova pasta</button>
        <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
        <button data-select-image class="btn btn-primary" data-mediadrawer-select>Selecionar</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
